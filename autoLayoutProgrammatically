import UIKit

class ViewController: UIViewController {
    
    

    override func viewDidLoad() {
        super.viewDidLoad()
        
        view.backgroundColor = .yellow
        
        //here's our entry point into our app
        let imageView = UIImageView(image: #imageLiteral(resourceName: "badBB"))
        view.addSubview(imageView)

        //enables autolayout for our imageview
        imageView.translatesAutoresizingMaskIntoConstraints = false
        
        imageView.centerXAnchor.constraint(equalTo: view.centerXAnchor).isActive = true
        imageView.centerYAnchor.constraint(equalTo: view.centerYAnchor).isActive = true
        imageView.widthAnchor.constraint(equalToConstant: 420).isActive = true
        imageView.heightAnchor.constraint(equalToConstant: 420).isActive = true
    }
    
}
